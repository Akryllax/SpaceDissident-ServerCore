# Change to directory where compile_commands.json is
compilation_database_dir: build
# Change to directory where diagram should be written
output_directory: docs/diagrams/generated
diagrams:
  core-class-diagram:
    type: class
    glob:
      - core/**/*.h
      - core/**/*.cpp
      - decorator/**/*.h
      - decorator/**/*.cpp
      - util/**/*.h
      - util/**/*.cpp
      - lib/**/*.h
      - lib/**/*.cpp
      - test/**/*.h
      - test/**/*.cpp
    # using_namespace:
    #   - myproject
    # include:
    #   namespaces:
    #     - myproject
    exclude:
      namespaces:
        # - std
        - fmt
        - spdlog
  core-seq-diagram:
    type: sequence
    glob:
      - core/**/*.h
      - core/**/*.cpp
      - decorator/**/*.h
      - decorator/**/*.cpp
      - util/**/*.h
      - util/**/*.cpp
      - lib/**/*.h
      - lib/**/*.cpp
      - test/**/*.h
      - test/**/*.cpp
    # using_namespace:
    #   - myproject
    # include:
    #   namespaces:
    #     - myproject
    exclude:
      namespaces:
        # - std
        - fmt
        - spdlog
  core-include-diagram:
    type: include
    glob:
      - core/**/*.h
      - core/**/*.cpp
      - decorator/**/*.h
      - decorator/**/*.cpp
      - util/**/*.h
      - util/**/*.cpp
      - lib/**/*.h
      - lib/**/*.cpp
      - test/**/*.h
      - test/**/*.cpp
    # using_namespace:
    #   - myproject
    # include:
    #   namespaces:
    #     - myproject
    exclude:
      namespaces:
        # - std
        - fmt
        - spdlog